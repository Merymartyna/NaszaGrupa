@model IEnumerable<NaszaGrupa.Models.MessagesModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Wiadomości</h1>
<br />
<a class="btn btn-lg btn-outline-success btn-block">
    @TempData["message"]
</a>
<br />

<p>
    <a asp-action="Create">Dodaj nowe zadanie</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Header)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Header)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Importance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MessageId" class="btn btn-lg btn-outline-success">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.MessageId" class="btn btn-lg btn-outline-success">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.MessageId" class="btn btn-lg btn-outline-success">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
